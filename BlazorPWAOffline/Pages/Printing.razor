@page "/print-html"
@inject IJSRuntime JSRuntime
@inject HttpClient Http

<PageTitle>Printing Testing</PageTitle>

<div class="d-print-none">
    <h1>Test printing Invoice</h1>
    <br />

    <button class="btn btn-primary" @onclick="PrintTable">Print Invoice</button>
    <br />
    <br />
</div>

<div class="bill">
    <div class="bill-header">
        <h1>Invoice</h1>
    </div>
    <table class="bill-table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Item 1</td>
                <td>Description of Item 1</td>
                <td>2</td>
                <td>$10.00</td>
                <td>$20.00</td>
            </tr>
            <tr>
                <td>Item 2</td>
                <td>Description of Item 2</td>
                <td>3</td>
                <td>$8.00</td>
                <td>$24.00</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="bill-total">Total:</td>
                <td>$44.00</td>
            </tr>
        </tfoot>
    </table>
</div>

<script>
    function printTable() {
        window.print();
    }
</script>

@code {
    private async Task PrintTable()
    {
        await JSRuntime.InvokeVoidAsync("printTable");
    }
}
